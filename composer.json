{
  "name": "srijanone/ezcontent-project",
  "description": "Project creator for EZ Content Distribution.",
  "type": "composer-plugin",
  "license": "GPL-2.0-or-later",
  "repositories": {
    "better_normalizers": {
      "type": "vcs",
      "url": "https://git.drupalcode.org/issue/better_normalizers-3286221.git"
    },
    "jsonapi_explorer": {
      "type": "vcs",
      "url": "https://git.drupalcode.org/issue/jsonapi_explorer-3288136"
    },
    "yoast_seo": {
      "type": "vcs",
      "url": "https://git.drupalcode.org/issue/yoast_seo-3384771"
    },
    "drupal": {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    "assets": {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  },
  "config": {
    "sort-packages": true,
    "process-timeout": 0,
    "allow-plugins": {
      "composer/installers": true,
      "drupal/core-composer-scaffold": true,
      "cweagans/composer-patches": true,
      "zaporylie/composer-drupal-optimizations": true,
      "oomphinc/composer-installers-extender": true
    }
  },
  "require": {
    "composer/installers": "^1.9",
    "cweagans/composer-patches": "^1.6.5",
    "drupal/core-composer-scaffold": "^9.5",
    "drupal/core-recommended": "^9.5",
    "drupal/ezcontent_demo": "^2.0",
    "srijanone/ezcontent": "dev-d9-demo",
    "zaporylie/composer-drupal-optimizations": "^1.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "quick-start": [
      "composer install",
      "php docroot/core/scripts/drupal quick-start ezcontent"
    ]
  },
  "extra": {
    "patches": {
      "drupal/core": {
        "[subprofile support] 3266057 - Allow profiles to define a base/parent profile and load them in the correct order For Drupal 9.5.x": "https://www.drupal.org/files/issues/2023-03-02/3266057-108-9-5-x.patch",
        "ImageItem should have an derivatives computed property, to expose all image style URLs For Drupal 9.5.x": "https://www.drupal.org/files/issues/2022-07-28/2825812-245.patch"
      }
    },
    "patches-ignore": {
      "srijanone/ezcontent": {
        "drupal/core": {
          "[subprofile support] 3266057 - Allow profiles to define a base/parent profile and load them in the correct order": "https://www.drupal.org/files/issues/2023-03-03/3266057-109-10-0-x.patch"
        },
        "drupal/entity_browser": {
          "3183414 - Entity browser modal popup does not close on pressing escape key": "https://www.drupal.org/files/issues/2020-11-19/3183414-2.patch"
        }
      },
      "drupal/ezcontent_api": {
        "drupal/core": {
          "ImageItem should have an derivatives computed property, to expose all image style URLs": "https://www.drupal.org/files/issues/2023-04-10/2825812-248.patch"
        }
      }
    },
    "composer-exit-on-patch-failure": false,
    "drupal-scaffold": {
      "locations": {
        "web-root": "./docroot"
      },
      "file-mapping": {
        "[web-root]/sites/default/default.services.yml": {
          "mode": "replace",
          "path": "docroot/core/assets/scaffold/files/default.services.yml",
          "overwrite": false
        },
        "[web-root]/sites/default/default.settings.php": {
          "mode": "replace",
          "path": "docroot/core/assets/scaffold/files/default.settings.php",
          "overwrite": false
        }
      }
    },
    "installer-paths": {
      "docroot/core": [
        "type:drupal-core"
      ],
      "docroot/libraries/{$name}": [
        "type:drupal-library",
        "type:bower-asset",
        "type:npm-asset"
      ],
      "docroot/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "docroot/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "docroot/themes/contrib/{$name}": [
        "type:drupal-theme"
      ]
    },
    "installer-types": [
      "bower-asset",
      "npm-asset"
    ],
    "enable-patching": true
  }
}
